@using BankApp.Models.Account
@model AccountViewModel

@{
    ViewBag.Title = "Create Account";
}

<h2>Create Account</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, "Введіть ім'я")
        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FirstName, String.Empty, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.LastName, "Введіть прізвище")
        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Age, "Введіть вік")
        @Html.TextBoxFor(model => model.Age, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PhoneNumber, "Введіть номер телефону")
        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
}  